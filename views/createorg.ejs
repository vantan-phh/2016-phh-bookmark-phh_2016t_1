<body>
<style>
.container{
  width: 80%;
  margin:0 auto;
}
.createOrg{
  padding: 20px;
}
</style>
<% include header.ejs %>
<div class="container">
  <form class="createOrg col s12" action="/createorg" method="post">
    <h3>グループ作成</h3>
    <div class="row">
      <div class="input-field col s6">
        <input id="orgName" type="text" class="orgName validate">
        <label for="orgName">グループの名前</label>
      </div>
      <div class="input-field col s12">
        <input name="orgDescription" id="orgDescription"type="text" class="validate">
        <label for="orgDescription">グループの説明</label>
      </div>
      <p><button class="btn btn-primary" style="float:right;">作成</button></p>
    </form>
  </div>
